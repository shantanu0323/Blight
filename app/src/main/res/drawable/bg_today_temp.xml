<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Colored rectangle-->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="40dp" />
            <gradient
                android:angle="45"
                android:gradientRadius="200dp"
                android:endColor="#333"
                android:startColor="#999"
                android:type="radial" />
        </shape>
    </item>

    <!-- Overlay with same color as background-->
    <item
        android:bottom="-40dp"
        android:right="-170dp"
        android:top="20dp">
        <rotate android:fromDegrees="-70">
            <shape android:shape="rectangle">
                <solid android:color="#ddd" />
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="-40dp"
        android:right="-175dp"
        android:top="20dp">
        <rotate android:fromDegrees="-70">
            <shape android:shape="rectangle">
                <solid android:color="#000" />
            </shape>
        </rotate>
    </item>

    <!-- Overlay with same color as background-->
    <item
        android:bottom="-40dp"
        android:right="-180dp"
        android:top="20dp">
        <rotate android:fromDegrees="-70">
            <shape android:shape="rectangle">
                <solid android:color="#ddd" />
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="-40dp"
        android:right="-185dp"
        android:top="20dp">
        <rotate android:fromDegrees="-70">
            <shape android:shape="rectangle">
                <solid android:color="#000" />
            </shape>
        </rotate>
    </item>
</layer-list>